<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Projects â€“ My Projects</title>

  <!-- 1) Tailwind utilities -->
  <script src="https://cdn.tailwindcss.com"></script>
  <!-- 2) DaisyUI components -->
  <link
    href="https://cdn.jsdelivr.net/npm/daisyui@2.51.3/dist/full.css"
    rel="stylesheet"
  />
</head>
<body class="min-h-screen flex flex-col">
  <%- include('partials/navbar', { page: '/solutions/projects' }) %>
  <main class="flex-grow p-6">
    <div class="max-w-4xl mx-auto">
      <h1 class="text-4xl font-bold mb-4">Projects</h1>
      <div class="mb-6 space-x-2">
        <a href="/solutions/projects?sector=Industry" class="btn btn-outline">
          Industry
        </a>
        <a href="/solutions/projects?sector=Transportation" class="btn btn-outline">
          Transportation
        </a>
        <a href="/solutions/addProject" class="btn btn-primary">
          + Add New Project
        </a>
      </div>
      <div class="overflow-x-auto">
        <table class="table table-zebra w-full">
          <thead>
            <tr>
              <th>Title</th>
              <th>Sector</th>
              <th>Summary</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% projects.forEach(project => { %>
              <tr>
                <td><%= project.title %></td>
                <td>
                  <a
                    href="/solutions/projects?sector=<%= project.Sector.sector_name %>"
                    class="btn btn-sm"
                  >
                    <%= project.Sector.sector_name %>
                  </a>
                </td>
                <td><%= project.summary_short %></td>
                <td class="space-x-2">
                  <a
                    href="/solutions/projects/<%= project.id %>"
                    class="btn btn-sm btn-primary"
                  >View</a>
                  <a
                    href="/solutions/editProject/<%= project.id %>"
                    class="btn btn-sm btn-success"
                  >Edit</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </main>
</body>
</html>
